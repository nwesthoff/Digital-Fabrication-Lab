{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noLib": false,
    "jsx": "react",
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom", "es2017", "esnext.asynciterable"],
    "baseUrl": "src"
  },
  "parcelTsPluginOptions": {
    "transpileOnly": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "static"]
}
